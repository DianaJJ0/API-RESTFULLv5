<!DOCTYPE html>
<html lang="es">
<head>
  <%- include('../partials/head', { title: 'Registro | TechStore' }) %>
</head>
<body>
  <%- include('../partials/header') %>

  <main class="auth-container">
    <section class="auth-card register-card">
      <header class="auth-header">
        <div class="auth-logo">TechStore</div>
        <div class="auth-decoration"></div>
      </header>

      <div class="auth-content">
        <h1 class="auth-title">Crear una cuenta</h1>
        <p class="auth-subtitle">¡Únete a la mejor tienda de tecnología!</p>

        <!-- Mensaje de error si lo hay -->
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-error">
            <p><%= error %></p>
          </div>
        <% } %>

        <!-- Formulario de registro -->
        <form action="/register" method="POST" class="form">
          <div class="form-group">
            <label for="nombreCompleto">Nombre Completo</label>
            <input type="text" id="nombreCompleto" name="nombreCompleto" placeholder="Ej: Diana Jiménez" required>
          </div>
          <div class="form-group">
            <label for="correo">Correo Electrónico</label>
            <input type="email" id="correo" name="correo" placeholder="Ej: diana@email.com" required>
          </div>
          <div class="form-group">
            <label for="password">Contraseña</label>
            <input type="password" id="password" name="password" placeholder="Tu contraseña" required>
          </div>
          <button type="submit" class="btn btn-primary btn-full">Registrarse</button>
        </form>
        <p class="auth-link">
          ¿Ya tienes cuenta?
          <a href="/login">Inicia sesión aquí</a>
        </p>
      </div>
    </section>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>