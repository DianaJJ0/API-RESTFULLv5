<!DOCTYPE html>
<html lang="es">
<head>
  <%- include('../partials/head', { title: 'Iniciar Sesión | TechStore' }) %>
</head>
<body>
  <%- include('../partials/header') %>

  <main class="auth-container">
    <section class="auth-card login-card">
      <header class="auth-header">
        <div class="auth-logo">TechStore</div>
        <div class="auth-decoration"></div>
      </header>

      <div class="auth-content">
        <h1 class="auth-title">Iniciar Sesión</h1>
        <p class="auth-subtitle">Bienvenido a TechStore. Inicia sesión para continuar.</p>

        <!-- Mensaje de error si lo hay -->
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-error">
            <p><%= error %></p>
          </div>
        <% } %>
        <% if (typeof success !== 'undefined' && success) { %>
          <div class="alert alert-success">
            <p><%= success %></p>
          </div>
        <% } %>

        <!-- Formulario de inicio de sesión -->
        <form action="/login" method="POST" class="form">
          <div class="form-group">
            <label for="correo">Correo electrónico</label>
            <input type="email" id="correo" name="correo" placeholder="Ej: diana@email.com" required>
          </div>
          <div class="form-group">
            <label for="password">Contraseña</label>
            <input type="password" id="password" name="password" placeholder="Tu contraseña" required>
          </div>
          <button type="submit" class="btn btn-primary btn-full">Iniciar Sesión</button>
        </form>
        <p class="auth-link">
          ¿No tienes cuenta?
          <a href="/register">Regístrate aquí</a>
        </p>
      </div>
    </section>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>